# -*- mode: ruby -*-
# vi: set ft=ruby :

Vagrant.configure("2") do |config|

  config.vm.define :pp_service do |pp_service|
    pp_service.vm.provision :shell, path: "vminit.sh"
    pp_service.vm.network :forwarded_port, host: 8700, guest: 80
    pp_service.vm.network :forwarded_port, host: 8790, guest: 8090
    pp_service.vm.network :forwarded_port, host: 8743, guest: 443
    # port for remote debugging with IntelliJ or other IDE
    pp_service.vm.network :forwarded_port, host: 8705, guest: 5005
    # activemq monitoring port
    pp_service.vm.network :forwarded_port, host: 8761, guest: 8161
    pp_service.vm.box = "https://s3.amazonaws.com/dev.virtual-machines/lp2-base.box"
    # map htdocs root to our bin dir
    pp_service.vm.synced_folder "../target/", "/home/vagrant/target"
    pp_service.vm.synced_folder "~", "/home/vagrant/user-home"
  end

  config.vm.provider "virtualbox" do |vb|
    vb.memory = 1024
  end

end
